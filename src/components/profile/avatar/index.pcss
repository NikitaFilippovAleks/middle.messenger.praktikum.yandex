.profile-avatar {
  display: flex;

  align-items: center;
  justify-content: center;

  width: 130px;
  height: 130px;

  background-color: $gray;
  border-radius: 50%;

  &__wrapper {
    display: flex;

    flex-direction: column;

    align-items: center;
  }

  &__title {
    margin-top: 10px;
  
    font-weight: 600;
    color: $light;
  }
}
