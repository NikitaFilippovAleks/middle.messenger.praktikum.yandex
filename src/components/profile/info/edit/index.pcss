.profile-info-edit {
  margin-bottom: 20px;
    
  width: 100%;
  height: 36px;

  display: flex;
  align-items: center;
  justify-content: space-between;

  &__title {
    color: $light;

    font-size: 14px;

    &__wrapper {
      height: 100%;
      flex: 1;

      border-bottom: 1px solid $gray;
    }
  }

  &__input {
    padding: 0 4px;
    flex: 1;
  }
}
