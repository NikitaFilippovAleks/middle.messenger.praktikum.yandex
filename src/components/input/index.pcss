.input {
  color: $light;

  
  text-align: center;

  width: 100%;

  background-color: $darkLight;
  border: 0;
  border-radius: 10px;

  &:focus {
    outline: none;
  }

  &_primary {
    line-height: 20px;

    padding: 15px 0;
  }

  &_secondary {
    font-size: 12px;
    line-height: 14px;
    
    padding: 7px 0;
  }
}
