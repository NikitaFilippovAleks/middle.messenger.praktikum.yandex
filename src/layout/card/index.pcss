.layout-card {
  padding: 0 20px;
  width: 340px;

  display: flex;
  flex-direction: column;
  align-items: center;

  border-radius: 10px;

  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);

  &_secondary {
    background-color: $darkSecondary;
  }

  &_primary {
    background-color: $darkPrimary;
  }
}
