.error {
  &__wrapper {
    margin-top: 76px;
    height: 492px;
  
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }

  &__main {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  &__title {
    color: $light;

    font-size: 40px;
    font-weight: 400;
    line-height: 40px;

    margin-bottom: 22px;
  }

  &__text {
    color: $gray;
  }
}
