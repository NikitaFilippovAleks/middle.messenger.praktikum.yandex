.error {
  &__wrapper {
    display: flex;

    flex-direction: column;

    align-items: center;
    justify-content: space-between;
  
    height: 492px;
    margin-top: 76px;
  }

  &__main {
    display: flex;

    flex-direction: column;

    align-items: center;
  }

  &__title {
    margin-bottom: 22px;
  
    font-size: 40px;
    font-weight: 400;
    line-height: 40px;
    color: $light;
  }

  &__text {
    color: $gray;
  }
}
